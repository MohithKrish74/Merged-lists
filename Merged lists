package com.company;

import com.sun.jdi.Value;
import org.w3c.dom.ls.LSOutput;

import java.security.spec.RSAOtherPrimeInfo;
import java.util.*;

public class Main
{
    public static void main(String[] args)
    {
        Scanner in = new Scanner(System.in);
        System.out.print("Enter the size of the array 1 : ");
        int size=in.nextInt();
        ArrayList<Integer>list1=new ArrayList<Integer>();
        System.out.println("Enter the elements ");
        for(int i=0;i<size;i++)
        {
            list1.add(in.nextInt());
        }
        ArrayList<Integer>list2=new ArrayList<Integer>();
        System.out.print("Enter the size of the array 2 : ");
        int sizes=in.nextInt();
        System.out.println("Enter the elements ");
        for(int i=0;i<sizes;i++)
        {
            list2.add(in.nextInt());
        }
        TreeSet<Integer>treeSet=new TreeSet<Integer>(list1);
        treeSet.addAll(list2);
        System.out.println("User list 1 is "+list1);
        System.out.println("User list 2 is "+list2);
        System.out.println("The Merged and Sorted list is "+treeSet);





        }

    }










